.comments {
  width: 100%;
  height: auto;
  background: #fff;
  margin: 20rpx 0;
}

.comments .head {
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #eee;
}

.comments .head-top {
  width: 100%;
  height: 160rpx;
  display: flex;
  background: #fff;
  padding: 20rpx 30rpx 0 30rpx;
  box-sizing: border-box;
  overflow: hidden;
  flex-wrap: wrap;
}
 .comments .head-top.show{ 
  height:auto;
}

.comments .head-bottom {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.comments .head .item {
  display: flex;
  height: 50rpx;
  width: auto;
  padding: 0 15rpx;
  line-height: 50rpx;
  border: 1rpx solid #eee;
  margin-right: 30rpx;
  color: #333;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}

.comments .head .item.active {
  color: #ab2b2b;
  border: 1rpx solid #ab2b2b;
}

.comment-item {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  height: auto;
  border-bottom: 1rpx solid #eee;
}

.comments .info {
  height: auto;
  width: 100%;
  display: flex;
  align-items: center;
}

.comments .user {
  width: auto;
  height: 67rpx;
  line-height: 67rpx;
}

.comments .user image {
  width: 67rpx;
  height: 67rpx;
  margin-right: 17rpx;
  border-radius: 50%;
}

.comments .user text {
  display: inline-block;
  width: auto;
  height: 66rpx;
  overflow: hidden;
  font-size: 29rpx;
  line-height: 66rpx;
}

.comments .time {
  display: flex;
  width: auto;
  height: 67rpx;
  line-height: 67rpx;
  color: #7f7f7f;
  font-size: 25rpx;
}

.comments .content {
  width: auto;
  line-height: 45rpx;
  font-size: 29rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.comments .imgs {
  width: 720rpx;
  height: auto;
  margin-bottom: 20rpx;
}

.comments .imgs .img {
  height: 150rpx;
  width: 150rpx;
  margin-right: 28rpx;
}

.comments .spec {
  width: auto;
  line-height: 30rpx;
  font-size: 24rpx;
  color: #999;
}

.comments .customer-service {
  width: 690rpx;
  height: auto;
  overflow: hidden;
  margin-top: 23rpx;
  background: rgba(0, 0, 0, 0.03);
  padding: 20rpx;
  box-sizing: border-box;
}

.comments .customer-service .reply {
  font-size: 24rpx;
  color: #333;
  line-height: 37.5rpx;
}

.comments .customer-service .content {
  font-size: 24rpx;
  color: #999;
  line-height: 37.5rpx;
}

.ul-right{
  width:24rpx;
  height:14rpx;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}
.ul-right image{
  width:100%;
  height:100%;
}
.rotate{
transform: rotate(180deg);
}