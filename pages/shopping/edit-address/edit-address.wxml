<!--pages/shopping/new-address/new-address.wxml-->

<view class="add-address">
    <view class="add-form">
        <view class="form-item">
            <input class="input"  placeholder="姓名" placeholder-style="font-size:32rpx; colr:#666" id='name' value="{{address.name}}" bindblur='bindInputValueChange' auto-focus/>
        </view>
        <view class="form-item">
            <input class="input"  value="{{address.mobile}}" placeholder="手机号码" id='mobile' bindblur='bindInputValueChange'  type="number" placeholder-style="font-size:32rpx; colr:#666"/>
        </view>
        <view class="form-item" bindtap='handelAddressTap'>
            <input class="input" value="{{address.province}} {{address.city}} {{address.county}}"  disabled="true" placeholder="省份、城市、区县" placeholder-style="font-size:32rpx; colr:#666" />
        </view>
        <view class="form-item">
            <input class="input"  value="{{address.addressDetails}}" id='addressDetails' bindblur='bindInputValueChange' placeholder="详细地址, 如街道、楼盘号等" placeholder-style="font-size:32rpx; colr:#666"/>
        </view>
        <view class="form-default">
            <text bindtap="handleTapIsDefault" class="default-input {{address.default_shipping? 'selected' : ''}}">设为默认地址</text>
        </view>
    </view>
 <view class="btns">
        <button class="save" bindtap="handleTapSaveAddress">保存</button>
    </view>
</view>

<view wx:if="{{isAddressPickShow}}" style="width: 100%; height: 300px; background:#fff;z-index:999;">
    <view style='display:flex; justify-content: space-between;padding-left:30rpx;padding-right: 30rpx;box-sizing: border-box;font-size:28rpx;font-family:PingFang-SC-Regular;color:rgba(51,51,51,1);line-height:100rpx;height:100rpx;'>
      <view catchtap='handelAddressDis'> 取消</view>
      <view catchtap='handelAddressCommit'>完成</view>
    </view>
    <!-- <view class="address" style='font-size:32rpx;font-family:PingFang-SC-Regular;color:rgba(51,51,51,1);'>{{address.province.id!=0?address.province.name:value1Defult}} - {{address.city.id!=0?address.city.name:value2Defult}} - {{address.district.id!=0?address.district.name:value3Defult}}</view> -->
    <picker-view indicator-style="height: 40px;" style="width: 100%; height: 240px; text-align:center;" value="{{value}}" bindchange="handleSelectChange">
      <picker-view-column>
        <view wx:for="{{provinces}}" style="line-height: 40px;font-size:32rpx;font-family:PingFang-SC-Regular;color:rgba(51,51,51,1);" wx:key="{{item.id}}" >{{item.name}}</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:for="{{citys}}" style="line-height: 40px;font-size:32rpx;font-family:PingFang-SC-Regular;color:rgba(51,51,51,1);" wx:key="city">{{item.name}}</view>
      </picker-view-column>
      <picker-view-column>
        <view wx:for="{{areas}}" style="line-height: 40px;font-size:32rpx;font-family:PingFang-SC-Regular;color:rgba(51,51,51,1);" wx:key="district">{{item.name}}</view>
      </picker-view-column>
    </picker-view>
  </view>
  