<!--pages/post-comment/post-comment.wxml-->
<view class="container">
  <!--描述头部开始  -->
  <view class="head">
    <image src="/image/1.png" style='display:flex;width:65rpx;height:60rpx'></image>
    <view class="desc-product">描述相符</view>
    <image src="/static/images/starcheck.png" style='width:45rpx;height:45rpx;display:flex'></image>
    <image src="/static/images/starcheck.png" style='width:45rpx;height:45rpx;display:flex'></image>
    <image src="/static/images/starcheck.png" style='width:45rpx;height:45rpx;display:flex'></image>
    <image src="/static/images/starcheck.png" style='width:45rpx;height:45rpx;display:flex'></image>
    <image src="/static/images/starcheck.png" style='width:45rpx;height:45rpx;display:flex'></image>
    <view class="desc-good">非常好</view>
  </view>

  <!--评价内容开始 -->
  <view class="post-comment">
    <view class="input-box">
      <textarea class="content" focus="true" maxlength="140" placeholder="宝贝满足您的期待吗？说说您的心得，分享给想买的她们吧" />
      <text class="count">{{140 - content.length}}</text>
    </view>
    <view class="photo-box">

      <image src='/static/images/photo.png' style='width:55rpx;height:45rpx;display:flex;margin-top:20rpx;' mode='aspectFit'></image>
      <view>添加图片</view>
    </view>
  </view>

  <!--匿名评价开始  -->
  <view class="anonymous">
    <view class="left">
      <image src="/static/images/nocheck.png" style='width:40rpx;height:40rpx;display:flex;margin-right:20rpx;'></image>
      <view>匿名</view>

    </view>
    <view class="right">您的评价可以帮助到其他小伙伴哟</view>
  </view>
  <!--匿名评价结束-->

  <!-- 取消发表按钮开始 -->
  <view class="btns">
    <view class="close">取消</view>
    <view class="post">发布</view>
  </view>
  <!--取消发表按钮结束-->

  <!--店铺评分开始 -->
  <view class="store-score">
    <view class="store-top">
      <image src="/static/images/storecall.png" style='width:35rpx;height:32rpx;display:flex;margin-right:20rpx;'></image>
      <view>店铺评分</view>
    </view>
    <view class="store-top">

      <view style='margin-right:20rpx'>物流服务</view>
      <image src="/static/images/staruncheck.png" style='width:45rpx;height:45rpx;display:flex;margin-right:20rpx;'></image>
      <image src="/static/images/staruncheck.png" style='width:45rpx;height:45rpx;display:flex;margin-right:20rpx;'></image>
      <image src="/static/images/staruncheck.png" style='width:45rpx;height:45rpx;display:flex;margin-right:20rpx;'></image>
      <image src="/static/images/staruncheck.png" style='width:45rpx;height:45rpx;display:flex;margin-right:20rpx;'></image>
      <image src="/static/images/staruncheck.png" style='width:45rpx;height:45rpx;display:flex;margin-right:20rpx;'></image>

    </view>
    <view class="store-top">

      <view style='margin-right:20rpx'>服务态度</view>
      <image src="/static/images/staruncheck.png" style='width:45rpx;height:45rpx;display:flex;margin-right:20rpx;'></image>
      <image src="/static/images/staruncheck.png" style='width:45rpx;height:45rpx;display:flex;margin-right:20rpx;'></image>
      <image src="/static/images/staruncheck.png" style='width:45rpx;height:45rpx;display:flex;margin-right:20rpx;'></image>
      <image src="/static/images/staruncheck.png" style='width:45rpx;height:45rpx;display:flex;margin-right:20rpx;'></image>
      <image src="/static/images/staruncheck.png" style='width:45rpx;height:45rpx;display:flex;margin-right:20rpx;'></image>
    </view>
  </view>
  <!--店铺评分结束  -->

</view>