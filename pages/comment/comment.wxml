<view class="comments">
  <view class="head">
    <view class="item {{ showType == 0 ? 'active' : ''}}" bindtap="handleTapswitchTab">
      <view class="txt">全部({{allCount}})</view>
    </view>
    <view class="item {{ showType == 0 ? '' : 'active'}}" bindtap="handleTapswitchTab">
      <view class="txt">有图({{hasPicCount}})</view>
    </view>
  </view>

  <view style='margin-top:86rpx'>
    <view class="comment-item" wx:for="{{comment}}" wx:key="item">
      <view class="info">
        <view class="user">
          <image src="{{item.userSrc}}"></image>
          <text>{{item.nickname}}</text>
        </view>
      </view>
      <view class="time">{{item.created_at}}
      <view style='margin-left:10rpx'>
      
      <!--TODO 字符串转换为数字 -->
        <block wx:for="{{item.rating}}" wx:key="item">
          <image src='http://image.365zhiding.com/wxapp/20171219/start1.png' style="width:18rpx;height:18rpx;margin-left:10rpx;"></image>
        </block>
         <block wx:for="{{5-item.rating}}" wx:key="item">
          <image src='http://image.365zhiding.com/wxapp/20171219/start2.png' style="width:18rpx;height:18rpx;margin-left:10rpx;"></image>
        </block> 
</view>
      </view>
      <view class="content">
        {{item.detail}}
      </view>
      <view class="imgs">
        <image class="img" wx:for="{{item.pic_list}}" wx:key="{{item.id}}" src="{{item.pic_url}}"></image>
      </view>
      <view class="spec">{{item.desc}}</view>

      <view class="customer-service">
        <text class="reply">小选回复：</text>
        <text class="content">{{item.replyContent}}</text>
      </view>
    </view>
  </view>
</view>