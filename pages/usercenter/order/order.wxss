/* pages/usercenter/order/order.wxss */

.container {
  height: 100vh;
  background: #f2f2f2;
  display: flex;
  justify-content: flex-start;
}

.order {
  margin-top: 20rpx;
  background: #fff;
  width: 100%;
}

.order .head {
  height: 84rpx;
  line-height: 84rpx;
  margin-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
  color: #333;
}

.order .goods {
  display: flex;
  align-items: center;
  height: 199rpx;
  margin-left: 31.25rpx;
}

.order .goods .img {
  height: 145.83rpx;
  width: 145.83rpx;
  background: #f4f4f4;
}

.order .goods .img image {
  height: 145.83rpx;
  width: 145.83rpx;
}

.order .goods .info {
  height: 145.83rpx;
  flex: 1;
  padding-left: 20rpx;
}

.order .goods .name {
  margin-top: 30rpx;
  display: flex;
  height: 44rpx;
  line-height: 44rpx;
  color: #333;
  font-size: 30rpx;
  justify-content: space-between;
  padding-right: 30rpx;
}

.order .goods .number {
  display: flex;
  height: 37rpx;
  line-height: 37rpx;
  color: #999;
  font-size: 25rpx;
  justify-content: space-between;
  padding-right: 30rpx;
}

.item-c {
  margin-left: 30rpx;
  border-top: 1rpx solid #f4f4f4;
  height: 103rpx;
  line-height: 103rpx;
  width: 720rpx;
  background: #fff;
}

.item-c .l {
  float: left;
}

.item-c .r {
  height: 103rpx;
  float: right;
  display: flex;
  align-items: center;
  padding-right: 16rpx;
}

.item-c .r .btn {
  float: right;
}

.item-c .btn {
  line-height: 58rpx;
  border-radius: 5rpx;
  text-align: center;
  margin: 0 15rpx;
  padding: 0 20rpx;
  height: 58rpx;
  border: 1rpx solid #333;
}

.item-c .btn.active {
  border: 1rpx solid #b4282d;
  color: #b4282d;

}
