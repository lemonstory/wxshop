  <view>
    <view class="comment-item" wx:for="{{comment}}" wx:key="item">
      <view class="info">
        <view class="user">
          <!--TODO  获取用户头像  判断用户头像是否为默认头像  -->
           <!-- <image src="http://yanxuan.nosdn.127.net/8945ae63d940cc42406c3f67019c5cb6.png"></image>  -->
