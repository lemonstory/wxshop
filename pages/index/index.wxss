/**index.wxss**/
.search-box{
  width:100%;
  height:136rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

input{
  width:710rpx;
  height:80rpx;
  background: #fff;
  border: 1rpx solid #eee;
  left:30rpx;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
}
.banner {
  width: 750rpx;
  height: 405rpx;
}
.banner swiper swiper-item image {
  width: 750rpx;
  height: 405rpx;
}
swiper {
  width: 750rpx;
  height: 405rpx;
}
.search-icon {
  position: absolute;
  top: 52rpx;
  left: 220rpx;
  height: 32rpx;
  width: 32rpx;
}
.search-icon image{
  width:100%;
  height:100%;
  position: absolute;
}
.tab-title{
  width:100%;
  height:74rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.recommend-img{
  position: relative;
}
.brand-name{
position: absolute;
top:130rpx;
left:30rpx;
font-size: 36rpx;
font-weight: bold;
}
.brand-price{
position: absolute;
top:250rpx;
left:30rpx;
font-size:34rpx;
font-weight: bold;
color:#ab2b2b;
}
.brand-desc{
position: absolute;
top:190rpx;
left:30rpx;
font-size:30rpx;
line-height: 30rpx;
}

