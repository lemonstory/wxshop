/* pages/post-comment/post-comment.wxss */

.container {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  overflow: hidden;
}
.head{
  width: 100%;
  height:110rpx;
  display: flex;
  flex-direction:row;
  background: #fff;
  margin-top: 1rpx;
  padding:0 30rpx;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  }
.desc-product{
  color:#333;
  font-size:30rpx;
}
.desc-good{
  color:#666;
  font-size:30rpx;
}
.post-comment {
  width: 750rpx;
  height: auto;
  background: #fff;
  margin-top: 4rpx;
  position: relative;
}
.post-comment .input-box {
  height: 400rpx;
  width: 690rpx;
  background: #fff;
  margin-left: 30rpx;
  border-bottom:1rpx solid #eee;
}
.post-comment .input-box .content {
  background: #fff;
  font-size: 28rpx;
  color: #333;
  height: 300rpx;
  width: 690rpx;
  padding-top: 30rpx;
  letter-spacing: 2rpx;
  line-height: 52rpx;
}
.post-comment .input-box .count {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  display: block;
  height: 30rpx;
  width: 50rpx;
  font-size: 29rpx;
  color: #999;
}
.photo-box{
  position: absolute;
  width: 162rpx;
  height:162rpx;
  border:5rpx dashed #DDD;
  bottom:30rpx;
  left:30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  color:#999;
  }
.anonymous{
  display: flex;
  height:98rpx;
  flex-direction: row;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
  background: #fff;
  align-items: center;
}
.left{
  color:#333;
  font-size:30rpx;
  display: flex;
  flex-direction: row;
}
.right{
  color:#666;
  font-size:28rpx;
}
.btns {
  height: 98rpx;
  display: flex;
  background: #fff;
  width:100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
  font-size: 30rpx;
  border-top: 1rpx solid #eee;
  align-items: center;
}
.close {
color:#666;
}
.post {
color:#f60;
}
.store-score{
  margin-top:20rpx;
  width:100%;
  height:490rpx;
  background: #fff;
}
.store-top{
  width:100%;
  height:98rpx;
  display: flex;
  flex-direction:row;
  padding: 0 30rpx;
  box-sizing: border-box;
  align-items: center;
  font-size: 30rpx;
}
